<!-- Cabecera de la pagina -->
<header>{{! mi nav}}
    <div class="container-fluid cabecera-caja">
        <h1><a href="/">{{site-main-title}}</a></h1>
        <h3><span class="adorno-inicio">Catolicismo</span><span class="adorno">Emacs</span><span class="adorno-fin">Software libre</span></h3>
    </div>
    <div class="container-fluid frase-caja">
        <h2 id="frase">“{{site-sub-title}}” <b>~G.K. Chesterton</b></h2>
    </div>
    <div class="container">
        <nav>
            <ul class="nav nav-pills nav-justified">
                {{#nav-categories}}
                    <li><a href="{{category-uri}}">{{category-name}}</a></li>
                {{/nav-categories}}
                {{#nav-summary}}
                  <li><a href="{{summary-item-uri}}">{{summary-item-name}}</a></li>
                {{/nav-summary}}
                {{#nav-about}}
                  <li><a href="{{about-uri}}">{{about-name}}</a></li>
                {{/nav-about}}
                {{#nav-source-browse}}
                  <li><a href="{{source-browse-uri}}">{{source-browse-name}}</a></li>
                {{/nav-source-browse}}
                {{#nav-rss}}
                  <li><a href="{{rss-uri}}">{{rss-name}}</a></li>
                {{/nav-rss}}
            </ul>
        </nav>
    </div>
</header>
